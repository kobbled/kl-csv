PROGRAM tst_csv_writ
%NOLOCKGROUP

CONST
  WRITE_COND = 1
VAR
  block_write FROM tst_csv_main : INTEGER
  waitime FROM tst_csv_main : INTEGER
  time_out : BOOLEAN

%include display.c.klt

%include display.klh
%include csv.klh

-- sensor csv file
%class csvpip('csvclass.klc','csvclass.klh')

BEGIN
  --clear display
  display__clear
  --show display
  display__show
  
  WHILE(TRUE) DO
    IF csvpip__get_lines >= csvpip__get_maxlines THEN
      PEND_SEMA(block_write, waitime, time_out)
      IF time_out THEN
        GOTO ENDREAD
      ENDIF
      csvpip__write_to_display
      csvpip__clear
      POST_SEMA(block_write)
    ENDIF
    DELAY 100
  ENDWHILE
  ENDREAD::

END tst_csv_writ
